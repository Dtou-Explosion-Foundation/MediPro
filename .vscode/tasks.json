{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gen javadoc",
            "type": "shell",
            "command": "javadoc",
            "args": [
                "-private",
                "-d",
                "${workspaceFolder}/javadoc",
                "-sourcepath",
                "${workspaceFolder}/src",
                "-cp",
                "lib/jogamp-fat.jar",
                "-subpackages",
                "medipro",
                "-quiet",
            ],
        },
        {
            "label": "gen javadoc with umldoclet",
            "type": "shell",
            "command": "javadoc",
            "args": [
                "-sourcepath",
                "${workspaceFolder}/src",
                "-d",
                "${workspaceFolder}/javadoc",
                "-docletpath",
                "${workspaceFolder}/.vscode/umldoclet-2.1.1.jar",
                "-doclet",
                "nl.talsmasoftware.umldoclet.UMLDoclet",
                "-cp",
                "lib/jogamp-fat.jar",
                "-private",
                "-quiet",
                "-subpackages",
                "medipro",
            ]
        }
    ]
}